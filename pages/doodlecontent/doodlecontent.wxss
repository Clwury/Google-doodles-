/* pages/doodlecontent/doodlecontent.wxss */
@import "../style/font.wxss";

text {
  font-family: 'Roboto', arial, sans-serif;
  font-weight: 300;
  line-height: 1.5em;
  display: block;
  font-size: 15px;
  text-align: left;
}

.strongtext {
  font-size: 18px;
  margin: 10px 0;
  font-weight: 500;
}

.viewcss {
  display: flex;
  flex-direction: row;

}
.left{
  width: 30px;
  display: flex;
  align-items: center;
  flex-grow: 1;

}
.right{
  width: 30px;
  display: flex;
  align-items: center;
  flex-grow: 1;
}
.img{
  width: 100%;
  height: 60px;

}

.contentImg {
  width: 320px;
  height: 200px;
  flex-grow: 2;
}

.doodle-card {
  padding: 10px;
  margin: 0 20px;
  background-color: #fff;
  border: thin solid #fff;
  box-shadow: 0px 2px 10px #dcdde1;
  margin-bottom: 20px;
}

.viewcss1{
  text-align: center;
}
.bottomImg {
  width: 100%;
}
